{
    "name": "gpoehl/phpreport",
    "description": "PHP library to create any reports or other applications working with grouped data.",
	"license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Guenter Poehl"
        }
    ],
    "keywords": [
        "php",
        "report",
		"reporting", 
		"group",
        "grouping",
        "totals",
        "subtotals",
        "sheets" ,
        "grids"
    ],
	
    "archive": {
        "exclude": ["/docs",  "/docs/build"]
    },
    "require": {
        "php": ">=8.1"
    },
    "autoload": {
		"psr-4":{ 
            "gpoehl\\phpReport\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11"
    }
}
