{
    "name": "gpoehl/phpreport",
    "description": "Solid foundation for applications working with data sets (e.g. reports) having to deal with group changes or to calculate totals and subtotals.",
    "authors": [
        {
            "name": "Guenter Poehl"
        }
    ],
    "keywords": [
        "php",
        "report",
	"reporting", 
        "grouping",
        "totals",
        "subtotals",
        "sheets" ,
        "grid table"
    ],
    "archive": {
        "exclude": ["/docs",  "/docs/build"]
    },
    "require": {
        "php": ">=8.0"
    },
    "autoload": {
        "classmap": [
            "src/"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    }
}
